<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentAddLabel"
    tools:context=".AddLabelFragment">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Label"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editTextLabelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:hint="Etiket Adı"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editTextLabelDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLabelName"
        android:hint="Etiket Açıklaması"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonAddLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLabelDescription"
        android:text="Ekle"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>

    <ListView
        android:id="@+id/listViewLabels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonAddLabel"
        android:layout_marginTop="10dp"/>

</RelativeLayout>